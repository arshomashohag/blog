# Production environment configuration
# Copy this file to terraform.tfvars and update values

# AWS SSO profile name from ~/.aws/credentials or ~/.aws/config
# Run 'aws sso login --profile <profile-name>' before deploying
aws_profile  = "your-sso-profile-name"

aws_region   = "us-east-1"
project_name = "blog"
environment  = "prod"

# IMPORTANT: Set your admin token (use a strong, random value)
admin_token = "your-secure-admin-token-here"

# REQUIRED: List of IP addresses allowed to access admin panel
# Must be in CIDR notation (e.g., "1.2.3.4/32" for single IP)
ips = [
  "YOUR_IP_ADDRESS/32",  # Replace with your IP
  # Add more IPs as needed
]
